<div class="event-card">
  <img src="<%= image %>" alt="<%= title %>" class="event-card__image" />

  <div class="event-card__body">
    <h3 class="event-card__title"><%= title %></h3>

    <dl class="event-card__info">
      <div class="event-card__time">
        <dt>
          <img src="/assets/images/icon_time.svg" width="16" height="16" alt="イベント開始時間" />
        </dt>
        <dd><%= time %></dd>
      </div>
      <div class="event-card__place">
        <dt>
          <img src="/assets/images/icon_location.svg" width="16" height="16" alt="イベント開始時間" />
        </dt>
        <dd><%= place %></dd>
      </div>
    </dl>

    <p class="event-card__desc">
      <%= description %>
      <br />
      <% if (note1) { %>
      <small class="event-card__note"><%= note1 %></small>
      <br />
      <% } %> <% if (note2) { %>
      <small class="event-card__note"><%= note2 %></small>
      <% } %>
    </p>

    <button class="event-card__more-btn">続きを読む</button>
  </div>
</div>
